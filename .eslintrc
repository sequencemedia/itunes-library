{
  "extends": "standard",
  "env": {
    "node": true,
    "es2020": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "overrides": [
    {
      "files": ["app.js"],
      "rules": {
        "no-useless-return": "off"
      }
    }
  ]
}
